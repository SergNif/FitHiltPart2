<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.part3.Part3Page2MenuWeekFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
>

        <androidx.constraintlayout.widget.ConstraintLayout  xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lyn_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="120dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/logo_ego"
                    android:layout_width="100dp"
                    android:layout_height="69dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:padding="0dp"

                    android:src="@drawable/ic_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/house_button"
                    style="@style/fon_menu_house_up_button_part2"

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="30dp"
                    android:clickable="true"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_enter_data_page4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="ПРИМЕРНОЕ МЕНЮ НА\nНЕДЕЛЮ"
                android:textAlignment="center"
                android:textColor="@color/red_text"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lyn_head"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/some_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_style_programm_pitania"
                android:lineSpacingExtra="5sp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"

                android:singleLine="false"

                android:translationY="-2.49sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_enter_data_page4"
                />

            <ImageView
                android:id="@+id/imageDown"
                android:layout_width="330dp"
                android:layout_height="200dp"

                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"

                android:gravity="center"
                android:padding="0dp"

                android:src="@drawable/part3page2down"
                app:layout_constraintEnd_toEndOf="@+id/some_id"
                app:layout_constraintStart_toStartOf="@+id/some_id"
                app:layout_constraintTop_toBottomOf="@+id/some_id" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>
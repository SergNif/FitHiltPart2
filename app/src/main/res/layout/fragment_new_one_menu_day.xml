<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.part2.NewOneMenuDayFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

        <TextView

            android:id="@+id/house_button"
            style="@style/fon_menu_house_up_button_part2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:layout_marginTop="30sp"
            android:layout_marginRight="80sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15sp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/house_button">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewRecyclrNewNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="3sp"
                    android:layout_weight="1"
                    android:text="Новая запись"

                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/basket_garbage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12sp"
                    android:src="@drawable/ic_icons_24_left_bar_vectorrec" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15sp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <EditText

                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:hint="10:00"

                    android:textColorHint="@color/color_text_login_grey"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/header_menu_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:hint="Введите заголовок"

                    android:textColorHint="@color/color_text_login_grey"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/weightOneMenuDay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="25dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:gravity="center"
                    android:hint="Вес"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:text=""

                    android:textColorHint="@color/color_text_login_grey"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15sp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/menu_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15sp"
                    android:layout_weight="1"
                    android:hint="Введите текст"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:minLines="1"
                    android:maxLines="15"
                    android:scrollbars="vertical"

                    android:textColorHint="@color/color_text_login_grey"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/enter_menu_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ic_boxgalka" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
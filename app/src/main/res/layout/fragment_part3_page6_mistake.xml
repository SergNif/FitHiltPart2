<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.part3.Part3Page6MistakeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/lyn_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="120dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >


                <ImageView
                    android:id="@+id/logo_ego"
                    android:layout_width="100dp"
                    android:layout_height="69dp"
                    android:padding="0sp"
                    android:layout_marginTop="35sp"
                    android:layout_marginBottom="15sp"
                    android:gravity="center"

                    android:src="@drawable/ic_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/house_button"
                    style="@style/fon_menu_house_up_button_part2"
                    android:gravity="top"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="70dp"
                    android:clickable="true"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/text_enter_data_page4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textAlignment="center"
                android:text="ПРИМЕРНОЕ МЕНЮ НА\nНЕДЕЛЮ"
                android:textColor="@color/red_text"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lyn_head"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/some_id"

                style="@style/text_style_programm_pitania"
                android:lineSpacingExtra="5sp"
                android:translationY="-2.49sp"

                app:layout_constraintTop_toBottomOf="@id/text_enter_data_page4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                android:id="@+id/image"
                android:layout_width="330dp"
                android:layout_height="230dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:padding="0dp"

                android:src="@drawable/part3page6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/some_id" />

            <TextView
                android:id="@+id/some_id2"

                style="@style/text_style_programm_pitania"
                android:lineSpacingExtra="5sp"
                android:translationY="-2.49sp"

                app:layout_constraintTop_toBottomOf="@id/image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>
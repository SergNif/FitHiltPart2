<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:textColor="#190F22"
        tools:context=".presentation.part1.Pg1MaleFemale">

        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:id="@+id/lin_lay1"
            android:layout_width="@dimen/width_frame_logo"
            android:layout_height="@dimen/hight_frame_logo"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingEnd="20dp"
                android:scaleX="1.0"
                android:scaleY="1.0"
                android:src="@drawable/ic_logo_ego"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="18dp"
                android:layout_weight="1"
                android:background="@drawable/ic_fon_text_up"
                android:fontFamily="@font/roboto_condensed_regular"
                android:paddingTop="4dp"
                android:text="Ты есть то, что ты ешь"
                android:textAlignment="center"
                android:textColor="@color/color_text_login_grey"
                android:textSize="18sp"
                android:textStyle="bold"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_lay2"
            android:layout_width="@dimen/width_frame_logo"
            android:layout_height="86.32sp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lin_lay1"
            >

            <LinearLayout
                android:id="@+id/lyn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/racion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:text="РАЦИОН\nПРАВИЛЬНОГО ПИТАНИЯ"
                    android:textColor="@color/color_text_login_grey"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginVertical="2dp"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:paddingTop="14dp"
                    android:text="ИНДИВИДУАЛЬНЫЙ ПЛАН"
                    android:textAlignment="viewStart"
                    android:textColor="@color/red_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="90.6dp"
                android:layout_height="83.04dp"

                android:layout_weight="1"
                android:background="@drawable/pic_fish_page3"

                />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_boy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_condensed_regular"
            android:src="@drawable/ic_wes"
            android:text="\nПлан\nдля\nмужчин"
            android:textAlignment="viewStart"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/imageView_boy"
            app:layout_constraintTop_toTopOf="@+id/imageView_boy"

            />

        <TextView
            android:id="@+id/textView_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_condensed_regular"
            android:src="@drawable/ic_wes"
            android:layout_marginStart="8dp"
            android:text="\nПлан\nдля\nженщин"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/imageView_girl"
            app:layout_constraintTop_toTopOf="@+id/textView_boy" />

        <ImageView
            android:id="@+id/imageView_boy"
            android:layout_width="60dp"
            android:layout_height="108dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="98dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/boy"
            app:layout_constraintStart_toStartOf="@id/textView_girl"
            app:layout_constraintTop_toBottomOf="@id/lin_lay2" />

        <ImageView
            android:id="@+id/imageView_girl"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/girl"
            android:layout_marginStart="30dp"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageView_boy" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/ic_fon_page2_down"
            android:fontFamily="@font/roboto_condensed_regular"
            android:gravity="center"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Здоровое питание - это база, на основе\nкоторой строится общее здоровое и бодрое\nсостояние организма, отличное настроение,\nвнешняя привлекательность и\nработоспособность."
            android:textColor="@color/color_text_login_grey"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.05" />


        <EditText
            android:id="@+id/edit_text_page1"
            android:layout_width="80sp"
            android:layout_height="@dimen/marg_horiz_35"
            android:layout_marginHorizontal="150sp"
            android:layout_marginTop="50sp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <TextView
            android:id="@+id/text_page1"
            android:layout_width="180sp"
            android:layout_height="135sp"
            android:layout_marginTop="50sp"
            android:background="@color/white"

            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/edit_text_page1"
            app:layout_constraintTop_toTopOf="@+id/edit_text_page1" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lotos"
            android:textColor="#181B1C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/textView2"
            app:layout_constraintStart_toStartOf="@id/textView2"
            app:layout_constraintTop_toTopOf="@id/textView2"
            app:layout_constraintVertical_bias="0.88" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchtheme"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"

            android:textColor="?attr/text_color"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView_boy" />


        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Светлая"
            app:layout_constraintStart_toEndOf="@+id/switchtheme"
            app:layout_constraintTop_toTopOf="@+id/switchtheme"
            app:layout_constraintBottom_toBottomOf="@+id/switchtheme"
            android:textColor="?attr/text_color"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тёмная"
            android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toStartOf="@+id/switchtheme"
            app:layout_constraintTop_toTopOf="@+id/switchtheme"
            app:layout_constraintBottom_toBottomOf="@+id/switchtheme"
            android:textColor="?attr/text_color"
            />
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тема"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/switchtheme"
            app:layout_constraintEnd_toEndOf="@+id/switchtheme"
            app:layout_constraintTop_toBottomOf="@+id/switchtheme"
            android:textColor="?attr/text_color"
            />


        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/image"
            app:layout_constraintEnd_toEndOf="@+id/image"

            app:layout_constraintStart_toStartOf="@id/image"

            app:layout_constraintTop_toBottomOf="@+id/text_page1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
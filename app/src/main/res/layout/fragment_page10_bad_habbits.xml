<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".presentation.part1.Pg10BadHabbitsFragment">


    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:id="@+id/lin_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginHorizontal="15sp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6sp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/ic_logo" />


        <TextView
            android:text="Намечается перестройка"
            style="@style/up_grin_text"
            android:padding="2sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/text_enter_data_page4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tienne_black"
        android:text="ВРЕДНЫЕ ПРИВЫЧКИ"
        android:textColor="@color/red_text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pick_page_4_image"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/text_up_page3"
        android:text="Выберите один или несколько пунктов, котрые\nВам больше всего подходят"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_enter_data_page4"
        app:layout_constraintVertical_bias="0.0"
        style="@style/middle_text_style"/>

    <TextView
        android:id="@+id/page10_fast_food"
        android:text="Люблю еду быстрого приготовления"

        app:layout_constraintTop_toBottomOf="@+id/text_up_page3"
        style="@style/text_data_page4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/page10_eat_nigth"
        android:text="Я ем поздно ночью"

        app:layout_constraintTop_toBottomOf="@+id/page10_fast_food"
        style="@style/text_data_page4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/page10_fast_shugar"
        android:text="Я часто ем сладкое"

        app:layout_constraintTop_toBottomOf="@+id/page10_eat_nigth"
        style="@style/text_data_page4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/page10_nothing_of_list"
        android:text="Ничего из перечисленного"

        app:layout_constraintTop_toBottomOf="@+id/page10_fast_shugar"
        style="@style/text_data_page4"
        tools:ignore="MissingConstraints" />



    <ImageView
        android:id="@+id/pick_page_4_image"
        android:layout_width="220dp"
        android:layout_height="206dp"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/pic_page_10"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lin_lay1"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_width="238dp"
        android:layout_height="@dimen/hight_40dp"
        android:layout_marginBottom="60sp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/text_back"
            android:layout_width="@dimen/hight_40dp"
            android:layout_height="@dimen/hight_40dp"
            android:backgroundTint="@color/bar_menu_navigation_fon_violet"
            android:background="@drawable/ic_button_previos" />

        <TextView
            android:id="@+id/text_next"
            android:layout_width="159dp"
            android:layout_height="27dp"
            android:layout_marginStart="40dp"

            android:layout_marginTop="10sp"
            android:background="@drawable/ic_button_next"
            android:fontFamily="@font/roboto_condensed_regular"
            android:paddingTop="2dp"
            android:text="ПРОДОЛЖИТЬ"
            android:textAlignment="center"

            android:textSize="15sp"
            android:textStyle="bold"

            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_footer_image"
        android:layout_width="318dp"
        android:layout_height="@dimen/hight_40dp"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/footer_image"
            android:layout_width="318dp"
            android:layout_height="@dimen/hight_40dp"


            android:background="@drawable/footer_image" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
